            <div class="col-md-10">
                @Html.EditorFor(model => model.SLTHANHLY, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SLTHANHLY, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Tập Huấn:
            @*@Html.LabelFor(model => model.TAPHUAN, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.TAPHUAN)
