@model QL_HDPHONGLAB.Models.THIETBI

@{
    ViewBag.Title = "Edit - Thiết Bị";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .body-content {
        position: relative;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        color: #ff0000;
        text-align: justify;
    }
</style>

<h2>Sửa Thông Tin Thiết Bị</h2>

<div class="body-content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MATB)

        <div class="form-group">
            Tên Thiết Bị:
            @*@Html.LabelFor(model => model.TENTB, htmlAttributes: new { @class = "control-label col-md-2" })*@
