@using QL_HDPHONGLAB.Models
@model PHIEUNHAP

@{
    ViewBag.Title = "Xoá Phiếu Nhập";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container" id="DanhSachPhieuNhap">
    <div class="row g-0">
        <div class="col-12 mb-5">
            <div class="card mb-2">
                <div class="row g-0 card-body">
                    <div class="col">
                        <div class="ps-4">
                            <div class="row mb-1">
                                <div class="col">
                                    <div class="mb-3">Mã Phiếu Nhập: @Model.MAPN</div>
                                    <div class="mb-3">Ngày Nhập: @Model.NGAYNHAP</div>
                                    <div class="mb-3">Nội Dung: @Model.NOIDUNG</div>
                                    <div class="mb-3">Nhà Cung Cấp: @Model.NCC.TENNCC</div>
                                    <div class="mb-3">Người Nhận: @Model.NGUOINHAN</div>
                                    <div class="mb-3">Phòng Lab: @Model.PHONGLAB.TENPHLAB</div>
                                    <div class="mb-3">Từ: @Model.TU</div>
                                    <div class="mb-3">Từ: @Model.DEN</div>
                                    <div class="mb-3">Tổng Tiền Phiếu Nhập: @string.Format("{0:0,0}", Model.TONGTIEN) VNĐ</div>
                                    <div class="mb-3">Ghi Chú: @Model.GHICHU</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input class="btn btn-outline-danger btn-sm" type="submit" value="Xóa" />
                </div>
            }
        </div>
    </div>
</div>

<!-- #region Phân Trang, tìm kiếm, lọc -->
<script type="text/javascript">
    var options = {
        valueNames: ['MAHC', 'TENHC', 'SOLUONGNHAP', 'GIANHAP', 'THANHTIEN'],
        page: 12,
        pagination: true
    };
    var userList = new List('DanhSachPhieuNhap', options);</script>
<!-- #endregion -->
