@model QL_HDPHONGLAB.Models.DUTRUHOACHAT

@{
    ViewBag.Title = "Create - DTHC";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .body-content {
        position: relative;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        color: #ff0000;
        text-align: justify;
    }
</style>

<h2>Thêm Dự Trù Hóa Chất</h2>

<div class="body-content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                Mã Hóa Chất:
                @*@Html.LabelFor(model => model.MAHC, "MAHC", htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.DropDownList("MAHC", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MAHC, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Tên Hóa Chất:
                @*@Html.LabelFor(model => model.TENHC, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TENHC, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TENHC, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Đặc Tả:
                @*@Html.LabelFor(model => model.DACTA, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DACTA, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DACTA, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Số Lượng:
                @*@Html.LabelFor(model => model.SOLUONG, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SOLUONG, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SOLUONG, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input class="btn btn-outline-danger btn-sm" type="submit" value="Thêm" />
                </div>
            </div>
        </div>
    }
</div>

